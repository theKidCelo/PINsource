<!-- Main content -->
<div class="container my-5">
  <h1 class="display-6 fw-normal editHeading">Edit Profile</h1>
    <div class="mx-auto text-center flex ">
      <div>
        <img src="https://via.placeholder.com/180" alt="Round Picture" class="round-pic">
      </div>
      <div>
        <input type="text" class="form-control imgText" />
      </div>
    </div>

  <div class="row">
    <div class="col-md-6 mx-auto text-center">
      <form>
        <div class="form-group">
          <label for="username" > Username </label>
          <input name= "username" id = "username" type="text" class="form-control textLength" />
        </div>
        <div class="form-group">
          <label for="password" > Password </label>
          <input name = "password" id = "password" type="text" class="form-control textLength" />
        </div>
        <button type="submit" class="btn btn-light editSubmit">Save Changes!</button>
      </form>
    </div>
  </div>
</div>
</section>

<!-- End Main Content  -->

