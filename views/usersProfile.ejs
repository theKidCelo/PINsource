<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css"
      type="text/css"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/scripts/baffle.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <title>NOTES - My Profile</title>
  </head>
  <body>
    <%-include("./partials/header") %>
    <div class="user-container">
      <h3>User Profile</h3>
      <div class="user-details">
        <img src=<%= user.profile_pic %> alt="User profile picture"
        width="300px"/>

        <form class="details" action="/api/users/me" method="POST">
          <div class="baffle-name">Name: <%= user.name %></div>
          <div>
            <i class="far fa-edit" id="edit-name"></i>
            <input class="user-name-input" type="text" name="name" />
          </div>
          <div class="baffle-email">Email: <%= user.email %></div>
          <div>
            <i class="far fa-edit" id="edit-email"></i>
            <input class="user-email-input" type="text" name="email" />
          </div>
          <div>Member Since: <%= user.created_at %></div>
          <div>
            Password:
            <p class="baffle-password">
              ▒░█ ▓▒▓▒▒ ▒<▒█▓ ▓/░ ▓▓▓█
            </p>
          </div>
          <div>
            <i class="far fa-edit" id="edit-password"></i>
            <input class="user-password-input" type="text" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">
            Save
          </button>
        </form>
      </div>
    </div>
    <script>
      window.baffle;
      // Select elements and start.
      let password = baffle(".baffle-password", {
        characters: "▒░█▓▒▓▒▒▒<▒█▓ ▓/░ ▓▓▓█░▓▒<░ ▓▓▒░/>▓▓",
        speed: 75
      });
      password.start();
      let name = baffle(".baffle-name", {
        characters: "▒░█▓▒▓▒▒▒<▒█▓ ▓/░ ▓▓▓█░▓▒<░ ▓▓▒░/>▓▓",
        speed: 75
      });
      name.reveal(1500);
      let email = baffle(".baffle-email", {
        characters: "▒░█▓▒▓▒▒▒<▒█▓ ▓/░ ▓▓▓█░▓▒<░ ▓▓▒░/>▓▓",
        speed: 75
      });
      email.reveal(1500);
    </script>
  </body>
</html>
