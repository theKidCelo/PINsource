<body>
  <%-include("./partials/header") %>
  <main style="margin-top: 120px;">
    <div class="card">
      <h3>User Profile</h3>
      <div>Name: <%= user.username %></div>
      <div>Email: <%= user.email %></div>
      <div>Member Since: <%= user.creation_date %></div>

      <form class="form-inline" action="/me" method="POST">
        <div class="form-group mb-2">
          <label for="longURL">Edit:</label>
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
            style="width: 300px; margin: 1em"
          />
          <input
            class="form-control"
            type="text"
            name="email"
            placeholder="email"
            style="width: 300px; margin: 1em"
          />
          <input
            class="form-control"
            type="text"
            name="password"
            placeholder="password"
            style="width: 300px; margin: 1em"
          />
          <input
            class="form-control"
            type="text"
            name="profile_pic"
            placeholder="profile_pic"
            style="width: 300px; margin: 1em"
          />
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
