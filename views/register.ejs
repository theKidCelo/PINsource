  <script type="text/javascript" src="/scripts/app.js"></script>
  <title>PINsource - Register</title>
</head>

<body>
  <%-include("./partials/header") %>
  <div class="card text-center">
      <div class="card-header"></div>

      <div class="card-body">
          <h4 class="card-title">Sign up to </h4>
          <p class="card-text">
            <form class="form-inline" action="/register" method="POST">
              <div class="form-group mb-2" style="margin: 0 auto">
                <label for="username">Username:</label>
                  <input class="form-control" type="text" name="name" placeholder="Enter name" style="width: 300px; margin: 1em">
                <label for="email">Email:</label>
                  <input class="form-control" type="email" name="email" placeholder="Enter email" style="width: 300px; margin: 1em">
                  <label for="password">Password:</label>
                  <input class="form-control" type="password" name="password" placeholder="Create password" style="width: 300px; margin: 1em">
                  <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>

          </p>
        </div>
    <div class="card-footer text-muted"></div>
  </div>

